<link rel="stylesheet" href="~/css/table.min.css" asp-append-version="true" />

<div class="table-title-wrapper">
<h1>List of bookmarks</h1>
</div>

<div id="bookmark-list">
</div>

<script>
    function getBookmarksTable() {
        showLoader();

        $.ajax({
            type: "GET",
            url: "/Bookmarks/GetBookmarksTable",
            success: function (data) {
                $("#bookmark-list").html(data);
                hideLoader();
            }
        });
    }

    getBookmarksTable();

    function toggleBookmark(bookId) {
        showLoader();

        $.ajax({
            type: "POST",
            url: "/Bookmarks/ToggleBookmark",
            dataType: "JSON",
            data: {
                bookId: bookId
            },
            success: function (data) {
                if (data.statusCode === 0) {
                    alertify.notify(data.message, 'success', 1);
                    getBookmarksTable();
                    hideLoader();
                }
                else {
                    alertify.notify(data.message, 'error', 1);
                    hideLoader();
                }
            }
        });
    }

    function deleteBook(bookId) {

        showLoader();

        $.ajax({
            type: "POST",
            url: "/Books/Delete",
            dataType: "JSON",
            data: {
                BookId: bookId
            },
            success: function (data) {
                if (data.statusCode === 0) {
                    alertify.notify(data.message, 'success', 1);
                    hideLoader();
                    getTable();
                }
                else {
                    alertify.notify(data.message, 'error', 1, function () {
                        hideLoader();
                        getTable();
                    });
                }
            }
        });
    }

</script>